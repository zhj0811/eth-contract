contract PledgeCore is Ownable {
    using EnumerableSet for EnumerableSet.UintSet;
    using EnumerableMap for EnumerableMap.UintToAddressMap;

    // Mapping from holder address to their (enumerable) set of owned tokens
    mapping (address => EnumerableSet.UintSet) private _holderTokens;

    // Enumerable mapping from token ids to their owners
    EnumerableMap.UintToAddressMap private _tokenOwners;

    function ownerOf(uint256 tokenId) public view returns (address) {
        return _tokenOwners.get(tokenId, "ERC721: owner query for nonexistent token");
    }

    function _mint(address to, uint256 tokenId) internal virtual {
        require(to != address(0), "ERC721: mint to the zero address");
        _holderTokens[to].add(tokenId);
        _tokenOwners.set(tokenId, to);
    }

    function _burn(uint256 tokenId) internal virtual {
        address owner = ownerOf(tokenId);
        _holderTokens[owner].remove(tokenId);
        _tokenOwners.remove(tokenId);
    }

    ERC20 public fungibleContract;
    uint256 public nextTokenId = 1;

    constructor(address _address) public{
        fungibleContract = ERC20(_address);
        owner = msg.sender;
    }

    event PledgeCreated(uint256 index, address owner, uint256 value);
    event PledgeCancelled(uint256 index, address owner, uint256 value);

    mapping (uint256 => uint256) pledgeValues;
    mapping (uint256 => uint256) pledgeTimes;

    function setERC20Address(address _address) external onlyOwner {
        fungibleContract = ERC20(_address);
    }

    function createPledge(uint256 _value) public {
        fungibleContract.transferFrom(msg.sender, address(this), _value);
        uint256 index = nextTokenId;

        pledgeValues[index] += _value;
        pledgeTimes[index] = now;
        _mint(msg.sender, index);
        emit PledgeCreated(index, msg.sender, _value);
        nextTokenId++;
    }

    function _cancelPledge(uint256 index) internal {
        fungibleContract.transfer(msg.sender, pledgeValues[index]);
        _burn(index);
        emit PledgeCancelled(index, msg.sender, pledgeValues[index]);
        delete pledgeValues[index];
        delete pledgeTimes[index];
    }

    function cancelPledge(uint256 index) public {
        require(msg.sender == ownerOf(index), "only owner");
        // require(pledgeValues[index]>0, "no pledge");
        _cancelPledge(index);
        // delete stakes[msg.sender];
    }

    function cancelIndexOfOwner(uint256 index) public {
        uint256 _index = _holderTokens[msg.sender].at(index);
        _cancelPledge(_index);
    }

    function balanceOf(address owner) public view returns (uint256) {
        return _holderTokens[owner].length();
    }

    function tokenOfOwnerByIndex(address owner, uint256 index) public view returns (uint256) {
        return _holderTokens[owner].at(index);
    }

    function getPledgeInfo(uint256 tokenId) public view returns(address own, uint256 value, uint256 createdAt) {
        own = ownerOf(tokenId);
        value = pledgeValues[tokenId];
        createdAt = pledgeTimes[tokenId];
    }

    function meetPledge(address _own, uint256 _value, uint256 _duration) public view returns (uint256) {
        for(uint256 i=0; i<_holderTokens[_own].length(); i++) {
            uint256 index = _holderTokens[_own].at(i);
            if (pledgeValues[index] >=_value && block.timestamp >(pledgeValues[index]+_duration) ) {
                return index;
            }
        }
        return 0;
    }

    function tokensOfOwner(address _owner) external view returns(uint256[] memory ownerTokens) {
        uint256 tokenCount = balanceOf(_owner);

        if (tokenCount == 0) {
            // Return an empty array
            return new uint256[](0);
        } else {
            uint256[] memory result = new uint256[](tokenCount);
            for(uint256 i=0; i<tokenCount; i++) {
                uint256 index = tokenOfOwnerByIndex(_owner,i);
                result[i] = index;
            }
            return result;
        }
    }
}
